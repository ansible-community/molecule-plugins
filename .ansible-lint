# .ansible-lint
exclude_paths:
  - .cache/ # implicit unless exclude_paths is defined in config
  - .github/
  - requirements.yml
  - src/**/cookiecutter/{{*

skip_list:
  # Temporary skips made during migration
  - args[module]
  # Temporary skips when fixing ansible-core 2.19 compatibility
  - formatting
  - yaml

mock_modules:
  - vagrant # only until we publish community.vagrant collection
